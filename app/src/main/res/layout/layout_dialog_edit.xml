<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="isNotify"
            type="boolean"/>

        <variable
            name="item"
            type="com.onemorebit.supersimpletodo.Models.Item"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/item_margin"
        android:layout_height="match_parent">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etEnterDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-light"
            android:imeOptions="actionDone"
            app:met_textColor="@color/colorTextPrimary"
            app:met_textColorHint="@color/colorTextSecondary"
            app:met_minCharacters="1"
            app:met_maxCharacters="100"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"
            app:met_floatingLabelTextColor="@color/colorAccent"
            app:met_helperText="Task description must not empty"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/colorAccent"
            app:met_clearButton="true"
            android:layout_marginTop="16dp"
            android:text="@{item.getTrimHtmlTime}"
            android:hint="@string/et_enter_item_hint"/>


        <!-- Layout show has reminder -->
        <LinearLayout
            android:id="@+id/layoutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_social_notifications_blue"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="@{item.getDateString}"
                android:alpha='@{isNotify ? 1.0f : 0.26f}'
                tools:text=" : 07/01/2016, 08:53"/>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:alpha="0.26"
                android:visibility="@{isNotify ? View.VISIBLE : View.GONE}"
                android:src="@mipmap/ic_close"/>

        </LinearLayout>

    </LinearLayout>
</layout>
